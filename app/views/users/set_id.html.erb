<div class='container'>
  <%= form_for(@user, url: user_update_path) do |f| %>
    <% if @user.errors.any? %>
      <div class="alert-danger">
        <% @user.errors.full_messages.each do |error| %>
          <p class="bg-danger"><%= error %></p>
        <% end %>
      </div>
    <% end %>
    <div class="form-group row">
      <%= f.label :osu_id, 'OSU ID', class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-4'>
        <%= f.text_field :osu_id, class: "form-control", placeholder: "123456789" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :activity_code, 'Activity Code', class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-4'>
        <%= f.text_field :activity_code, class: "form-control", placeholder: "DT00" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :organization_id, 'Organization', class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-4'>
        <%= f.select :organization_id, @organizations.collect { |o| [o.name, o.id] }, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <div class='col-sm-6'>
        <%= f.submit 'Update', class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>
