<% if obj.errors.any?%>
  <div class="flash_messages">

    <div class="alert alert-danger">
      <div class="panel-heading">
        <h2 class="panel-title">
            <%= pluralize(obj.errors.count, "error") %>
            prevented this form from being saved
        </h2>
      </div>
      <div class="panel-body collapse" id="error-body">
        <ul>
          <% obj.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
      <a data-toggle="collapse" class="toggle-show" href="#error-body" aria-expanded="false" aria-controls="error-body">
        Click to show <i class="fa fa-caret-down"></i>
      </a>
    </div>
  </div>

<% end %>
