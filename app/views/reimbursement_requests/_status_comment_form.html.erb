<%= form_for object,  url: reimbursement_request_comment_url(@reimbursement_request) do |form| %>
  <%if current_user.certifier || current_user==@reimbursement_request.claimant  %>
    <%= form.text_area 'comment', class: "text_area" %>
  <%end%>
  <div class="col-2 save">
    <div class="actions">
      <%if current_user.certifier || current_user==@reimbursement_request.claimant  %>
        <%= form.button :Submit, class: "btn btn-success " %>
      <%end%>
    </div>
  </div>
<% end %>