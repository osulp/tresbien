<tr class="nested-fields expense-other" data-table-name="expense-other">
  <td>
    <% options = @expense_types.not_above_per_diem.map { |g| [g.name, g.id, {'data-account-code' => g.account_code }]} %>
    <%= f.input :expense_type_id,
        collection: options,
        input_html: { class: 'expense-type' },
        label: false  %>
  </td>
  <td><%= f.input :from_date, as: :date_picker, label: false, input_html: { value: f.object.from_date ? f.object.from_date.to_date : '' } %></td>
  <td><%= f.input :to_date, as: :date_picker, label: false, input_html: { value: f.object.to_date ? f.object.to_date.to_date : '' } %></td>
  <td><%= f.input :notes, label: false, as: :string, placeholder: 'Details about the expense' %></td>
  <td><%= f.input :amount, label: false, input_html: { class: "row-sum-input", value: number_with_precision(f.object.amount, precision: 2) } %></td>
  <td>
    <%= f.input :client_id, as: :hidden, input_html: { class: "client-id" } %>
    <%= link_to_remove_association f,
        class: "btn btn-danger btn-sm",
        "data-toggle" => 'tooltip',
        "data-placement" => 'top',
        title: t('reimbursement_request_form.tooltips.remove_expense_other')  do %>
      <i class="fa fa-trash-o fa-2x"></i>
    <% end %>
  </td>
</tr>
<%= f.input_field :_destroy, as: :hidden, class: 'destroy', value:'false' %>
<%= f.input_field :id, as: :hidden %>
