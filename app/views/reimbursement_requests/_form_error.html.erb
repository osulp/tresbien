<% if obj.errors.messages[:base].present?%>
  <div class="flash_messages">
    <div class="alert alert-danger">
      <div class="panel-heading">
        <h2 class="panel-title">There was a problem saving this request.</h2>
      </div>
      <div class="panel-body" id="error-body">
        <ul>
          <% obj.errors.details[:base].each do |e| %>
            <li data-target-nav-panel="<%= e[:target_nav_panel_href] || '' %>"><%= e[:error] %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
<%= console %>
