<%= simple_form_for @reimbursement_request, html: { multipart: true, class: 'reimbursement-request-form' } do |f| %>
  <div class="row">
    <div class="col-lg-3 col-md-3 col-sm-12">
      <div class="row">
        <div class="col col-xl-7 col-lg-10">
          <%= render partial: 'tab_navigation' %>
          <%= render partial: 'form_total', locals: { f: f } %>
        </div>
      </div>
    </div>
    <div class="col col-lg-9 col-md-9 col-sm-12 tab-content">
      <%= render "form_error", obj: @reimbursement_request %>
      <div class="tab-pane active" id="request_information_panel">
        <%= render partial: 'form_traveller_information',  locals: { f: f, current_user: current_user, certifiers: @certifiers }  %>
        <%= render partial: 'form_request_information', locals: { f: f } %>
      </div>
      <%= render partial: 'form_itinerary', locals: { f: f } %>
      <%= render partial: 'form_other_expenses', locals: { f: f } %>
      <%= render partial: 'form_accounting', locals: { f: f } %>
      <%= render partial: 'form_airfare', locals: { f: f } %>
      <%= render partial: 'form_mileage', locals: { f: f } %>
      <%= render partial: 'form_attachments', locals: { f: f } %>
      <div class="form-row submit-row justify-content-between">
        <a class="btn btn-default btn-primary next-prev-nav visibility-hidden" id="prev-tab" href=#>
          <i class="fa fa-chevron-left"></i>
          Prev
        </a>
        <%= f.button :submit, class: "btn btn-success " %>
        <a class="btn btn-default btn-primary next-prev-nav" id="next-tab" href=#>
          Next
          <i class="fa fa-chevron-right"></i>
        </a>
      </div>
    </div>
  </div>
<% end %>
