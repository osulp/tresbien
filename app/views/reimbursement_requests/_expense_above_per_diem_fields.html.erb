<tr class="nested-fields above-per-diem " data-table-name="expense-other">
  <td>
    <span class='date'><%= f.object.from_date.nil? ? '' : f.object.from_date.strftime("%Y-%m-%d") %></span>
    <%= f.input :expense_type_id, input_html: { value: ExpenseType.above_per_diem.pluck(:id).first }, wrapper_html: {class: "hidden" } %>
    <%= f.input :from_date, as: :hidden, input_html: { class: 'from-date', value: f.object.from_date ? f.object.from_date.to_date : '' } %>
    <%= f.input :to_date, as: :hidden, input_html: { class: 'to-date', value: f.object.to_date ? f.object.to_date.to_date : '' } %>
  </td>
  <td><%= f.input :notes, label: false, as: :string, input_html: { class: "notes" }%></td>
  <td class="amount">
    <%= f.input :amount, label: false, input_html: { class: "row-sum-input", readonly: true, value: number_with_precision(f.object.amount, precision: 2) } %>
  </td>
  <td>
    <%= f.input :client_id, as: :hidden, input_html: { class: "client-id" } %>
    <%= f.input :above_per_diem_expense, label: false, input_html: { checked: true }, wrapper_html: { class: "hidden" } %>
    <%= link_to_remove_association f,
      class: "btn btn-danger btn-sm",
      "data-toggle" => 'tooltip',
      "data-placement" => 'top',
      title: t('reimbursement_request_form.tooltips.remove_above_per_diem')  do %>
      <i class="fa fa-trash-o fa-2x"></i>
    <% end %>
  </td>
</tr>
<%= f.input_field :_destroy, as: :hidden, class: 'destroy', value:'false' %>
<%= f.input_field :id, as: :hidden %>
